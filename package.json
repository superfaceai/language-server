{
  "name": "@superfaceai/language-server",
  "description": "Superface Language Server",
  "repository": "https://github.com/superfaceai/language-server.git",
  "version": "1.1.0",
  "author": "Superface Team",
  "license": "MIT",
  "main": "dist/server",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@superfaceai/parser": "^1.1.0",
    "vscode-languageserver": "^7",
    "vscode-languageserver-textdocument": "^1.0.1"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "yarn build --watch",
    "prebuild": "yarn clean",
    "clean": "rimraf dist/",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier -c src/",
    "format:fix": "prettier --write src/",
    "prepush": "yarn build && yarn lint && yarn format"
  }
}
